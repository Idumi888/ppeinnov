{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}
	- Liste des thèmes
{% endblock %}
{% block body %}
	{{parent()}}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">
				Liste des thèmes
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover" style="border:1px solid black;">
						<thead class="text-primary">
							<tr>
								<th scope="col">
									Libellé Thème
								</th>
								
								<th scope="col">
									Modifier
								</th>
								<th scope="col">
									Supprimer
								</th>
							</tr>
						</thead>
						<tbody>
							{% for theme in themes %}
								<tr class="{{ cycle(['table-primary'], loop.index0) }}">
									<td>
										{{theme.libelle |capitalize }}
									</td>
									<td>
										<a href="{{path('modif_theme',{'id': theme.id})}}" class="text-white">
											<span class="material-icons" title="Modifier un	thème">
												create
											</span>
										</a>
									</td>
									<td>
										<a href="{{path('theme',{'supp':theme.id})}}" class="text-white">
											<span class="material-icons" title="Supprimer le thème">
												delete
											</span>
										</a>
									</td>

								</tr>
							{% endfor %}
							
						</tbody>
					</table>
					{% for voca in vocasParTheme %}
                                
						<p> Il y a {{ voca.nombre }} vocabulaire dans le theme {{voca.themes }}</p>

                    {% endfor %}


				</div>
			</div>
		</div>
	</div>



		
{% endblock %}
