{% extends 'base.html.twig'%}
{% block content%}
<div class="container-fluid">
            <div class="row justify-content-center">
                <h1 class="text-center text-primary p-4">Liste des vocabulaires</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-8 p-4 m-0 text-primary">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        libelle
                                    </th>
                                    <th scope="col">
                                        libelle_en
                                    </th>
                                    <th scope="col">
                                        modifier
                                    </th>
                                    <th scope="col">
                                        supprimer
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                {% for vocabulaire in vocabulaire %}
                                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                   
                                        <td>
                                            {{vocabulaire.libelle |capitalize }}
                                        </td>
                                        <td>
                                            {{vocabulaire.libelleen |capitalize }}
                                        </td>
                                        <td>
                                            <a href="{{ path('modif-vocabulaire',{'id': vocabulaire.id}) }}"><span class="material-icons">
                                                create
                                            </span></a>
                                        </td>
                                        <td>
                                            <a href="{{path('liste-vocabulaire',{'supp':vocabulaire.id})}}" class="text-white">
											<span class="material-icons" title="Supprimer le vocabulaire">
												delete
											</span>
										</a>
                                        </td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
{% endblock%}