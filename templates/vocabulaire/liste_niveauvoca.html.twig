{% extends 'base.html.twig'%}
{% block content%}
<div class="container-fluid">
            <div class="row justify-content-center">
                <h1 class="text-center text-primary p-4">Liste des vocabulaires</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-8 p-4 m-0 text-primary">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            {% for vocabulaire in vocabulaire %}
                                <tr>
                                    <th scope="col">
                                        {{vocabulaire.niveau}}
                                    </th>     
                                </tr>
                            </thead>
                            <tbody>
                                
                                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                   
                                        <td>
                                            {{vocabulaire.libelle |capitalize }}
                                        </td>
                                        <td>
                                            {{vocabulaire.libelleen |capitalize }}
                                        </td>
                                        

                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
{% endblock%}