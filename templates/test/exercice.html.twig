{% extends 'base.html.twig'%}
{% block title %}
	{{parent()}}
	- Test en cours
{% endblock %}
{% block content%}
<div class="row justify-content-center">
	<h1 class="text-center text-primary p-4" id="titre">
		A vous de jouer !
	</h1>
	<h1 class="text-center text-primary p-4" id="affichage">
		Traduire le mot suivant
	</h1>
	<select class="btn btn-primary" id="selectTheme">
		<option value="base">Choisissez un thème</option>
	</select>

	<button class="btn btn-primary btn-lg" id="boutonExercice">Commencer le test</button>
	<input type="hidden" value="{{app.user.id}}" id="user"></input>

	<input type="text" class="form-control mr-sm-2" id="inputExercice">
	<button class="btn btn-primary btn-lg" id="boutonExerciceFormulaire">Valider</button>
	<button class="btn btn-primary btn-lg" id="resultat">Voir les resultats</button>

	<table class="table table-hover" id="tableauhtml">
		<tr id="tableaures">
			<th>
				Question:
			</th>
			<th>
				Réponse:
			</th>
			<th>
				Résultat:
			</th>
		</tr>
	</table>
</div>
{%endblock%}
