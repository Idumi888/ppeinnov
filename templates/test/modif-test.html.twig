{% extends 'base.html.twig'%}
{% block title %}Innov'Anglais - Modifier un test{% endblock %}
{% block content%}
{{ form_start(form) }}
<div class="row justify-content-center">
                <h1 class="text-center text-primary p-4">Modifier un test</h1>
            </div>
				<div class="form-group mx-auto text-center w-25 p-3 text-primary">
					{{ form_label(form.niveau, 'Niveau : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.libelle, 'Libelle : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}
					) }}
                   
					<br>
                
				{{ form_widget(form.modifier, { 'label': "Modifier", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
				{{ form_end(form) }}
				</div>
{% endblock %}