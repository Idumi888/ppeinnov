{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}
	- Modifier un abonnement
{% endblock %}
{% block body %}
	{{parent()}}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">
				Modifier un abonnement
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 p-4 m-0 text-primary">
				{{ form_start(form) }}
				<div class="form-group mx-auto text-center w-25 p-3">
					{{ form_label(form.type, 'Type : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.type, {'attr': {'class': 'form-control'}}
					) }}
					
					{{ form_label(form.paiement, 'Paiement : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.paiement, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.prix, 'Prix : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.prix, {'attr': {'class': 'form-control'}}
					) }}

				</div>
				<div class="form-group mx-auto text-center w-25 p-3">
				{{ form_widget(form.modif_abonnement, { 'label': "Modifier", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}