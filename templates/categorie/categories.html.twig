{% extends 'base.html.twig' %}
{% block title %}Innov'Anglais - Liste des catégories{% endblock %}

{% block body %}
	{{parent()}}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">
				Liste des catégories
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover" style="border:1px solid black;">
						<thead class="text-primary">
							<tr>
								<th scope="col">
									Libellé
								</th>
								<th class="text-primary" scope="col"> Modifier</th>
								<th class="text-primary" scope="col"> Supprimer</th>
							</tr>
						</thead>
						<tbody style="border:1px solid black;" >
							{% for categorie in categories %}
								<tr class="{{ cycle(['table-primary'], loop.index0) }}">
									<td>
										{{categorie.libelle |capitalize }}
									</td>
									<td>
										<a href="{{path('modif_categorie',{'id': categorie.id})}}" class="text-white">
											<span class="material-icons" title="Modifier un
													thème">
												create
											</span>
										</a>
									</td>
									<td>
										<a href="{{path('categorie',{'supp':categorie.id})}}" class="text-white">
											<span class="material-icons" title="Supprimer le thème">
												delete
											</span>
										</a>
									</td>

								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				
					{% for voca in vocaParTheme %}
                                <p> il y a {{voca.nombre }} vocabulaire dans la categorie {{voca.categories }}</p>


                            {% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
